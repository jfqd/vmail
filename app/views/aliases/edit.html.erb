<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', aliases_path  %></li>
      <li><%= link_to 'New', new_alias_path %></li>
      <li class="active"><%= link_to 'Edit', edit_alias_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <h2 class="title">Edit Alias</h2>
    <div class="inner">
      <div class="error">
        <%= error_messages_for :alias -%>
      </div>
      <% form_for @alias, :url => alias_path(@alias), :html => { :class => :form } do |f| -%>
        <%= render :partial => 'form', :locals => { :f => f } %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>