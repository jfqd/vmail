<div class="group">
  <%= f.label :active, "active", :class => :label %>
  <%= f.check_box :active, :class => 'checkbox' %>
  <span class="description">Activation of the User</span>
</div>
<div class="group">
  <%= f.label :domain, "domain", :class => :label %>
  <%= collection_select(:user, :domain_id, Domain.all, :id, :domain, {:prompt => true}) %>
  <span class="description">Domain of the User</span>
</div>
<div class="group">
  <%= f.label :name, "name", :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
  <span class="description">User name like: info</span>
</div>
<div class="group">
  <%= f.label :password, "password", :class => :label %>
  <%= f.password_field :password, :class => 'text_field' %>
  <span class="description">A password</span>
</div>
<div class="group navform">
  <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', users_path %>
</div>
