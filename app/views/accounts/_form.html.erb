<div class="group">
  <%= f.label :login, "login", :class => :label %>
  <%= f.text_field :login, :class => 'text_field' %>
  <span class="description">Login name</span>
</div>

<div class="group">
  <%= f.label :password, "password", :class => :label %>
  <%= f.password_field :password, :class => 'text_field' %>
  <span class="description">Password</span>
</div>

<div class="group">
  <%= f.label :password_confirmation, "password_confirmation", :class => :label %>
  <%= f.password_field :password_confirmation, :class => 'text_field' %>
  <span class="description">Confirm Password</span>
</div>

<div class="group navform">
  <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', accounts_path %>
</div>
