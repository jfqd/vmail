<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', accounts_path  %></li>
      <li><%= link_to 'New', new_account_path %></li>
      <li class="active"><%= link_to 'Edit', edit_account_path %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Edit Account</h2>
    <div class="inner">
      <div class="error">
        <%= error_messages_for :account -%>
      </div>
      <% form_for :account, :url => accounts_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => 'form', :locals => { :f => f } %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>